

@model List<DoAn_LTWeb.ViewModels.CartItemViewModel>
@{
    ViewBag.Title = "Giỏ hàng của bạn";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="container py-5">
    <h2 class="fw-bold mb-4 text-center">GIỎ HÀNG CỦA BẠN</h2>

    @if (Model.Count > 0)
    {
        <div class="row">
            <div class="col-lg-8">
                <div class="card border-0 shadow-sm">
                    <div class="card-body p-0">
                        <table class="table table-hover mb-0 align-middle">
                            <thead class="bg-light">
                                <tr>
                                    <th class="ps-4">Sản phẩm</th>
                                    <th class="text-center">Đơn giá</th>
                                    <th class="text-center">Số lượng</th>
                                    <th class="text-end pe-4">Thành tiền</th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td class="ps-4">
                                            <div class="d-flex align-items-center">
                                                <img src="~/Content/Assets/Product_Images/@item.HinhAnh"
                                                     style="width: 70px; height: 70px; object-fit: cover;"
                                                     class="rounded border me-3">
                                                <div>
                                                    <h6 class="mb-0 fw-bold">@item.TenSanPham</h6>
                                                    <small class="text-muted">Loại: @item.TenBienThe</small>
                                                </div>
                                            </div>
                                        </td>
                                        <td class="text-center">@item.DonGia.ToString("#,##0") đ</td>
                                        <td class="text-center" style="width: 120px;">
                                            <form action="@Url.Action("UpdateQuantity", "Cart")" method="post">
                                                <input type="hidden" name="id" value="@item.MaBienThe" />
                                                <input type="number" name="quantity" value="@item.SoLuong"
                                                       min="1" class="form-control form-control-sm text-center d-inline-block"
                                                       onchange="this.form.submit()" style="width: 60px;">
                                            </form>
                                        </td>
                                        <td class="text-end pe-4 fw-bold text-danger">
                                            @item.ThanhTien.ToString("#,##0") đ
                                        </td>
                                        <td>
                                            <a href="@Url.Action("Remove", "Cart", new { id = item.MaBienThe })"
                                               class="text-muted" title="Xóa">
                                                <i class="fas fa-trash-alt"></i>
                                            </a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
                <div class="mt-3">
                    <a href="@Url.Action("Index", "Home")" class="text-decoration-none">
                        <i class="fas fa-arrow-left me-1"></i> Tiếp tục mua sắm
                    </a>
                </div>
            </div>

            <div class="col-lg-4">
                <div class="card border-0 shadow-sm">
                    <div class="card-body p-4">
                        <h5 class="fw-bold mb-3">Cộng giỏ hàng</h5>
                        <div class="d-flex justify-content-between mb-2">
                            <span>Tạm tính:</span>
                            <span class="fw-bold">@string.Format("{0:N0} đ", ViewBag.TongTien)</span>
                        </div>
                        <div class="d-flex justify-content-between mb-4">
                            <span>Giảm giá:</span>
                            <span class="text-success">-0 đ</span>
                        </div>
                        <hr>
                        <div class="d-flex justify-content-between mb-4 fs-5">
                            <span class="fw-bold">Tổng tiền:</span>
                            <span class="fw-bold text-danger">@string.Format("{0:N0} đ", ViewBag.TongTien)</span>
                        </div>

                        <div class="d-grid">
                            <a href="@Url.Action("Checkout", "Cart")" class="btn btn-danger btn-lg" target="_blank">
                                TIẾN HÀNH THANH TOÁN
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="text-center py-5">
            <i class="fas fa-shopping-basket fa-4x text-muted mb-3"></i>
            <h4>Giỏ hàng của bạn đang trống</h4>
            <p class="text-muted">Hãy chọn thêm sản phẩm để mua sắm nhé.</p>
            <a href="@Url.Action("Index", "Home")" class="btn btn-primary mt-3">Quay lại trang chủ</a>
        </div>
    }
</div>

