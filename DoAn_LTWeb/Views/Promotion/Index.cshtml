@model DoAn_LTWeb.ViewModels.ProductFilterViewModel

@{
    ViewBag.Title = "Sản phẩm Khuyến mãi"; // (Sửa lại tiêu đề cho đúng trang)
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="container py-3">

    @*Banner ảnh*@
    <div id="heroCarousel" class="carousel slide carousel-fade" data-bs-ride="carousel">
        <div class="carousel-indicators">
            <button type="button" data-bs-target="#heroCarousel" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
            <button type="button" data-bs-target="#heroCarousel" data-bs-slide-to="1" aria-label="Slide 2"></button>
            <button type="button" data-bs-target="#heroCarousel" data-bs-slide-to="2" aria-label="Slide 3"></button>
        </div>
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img src="~/Content/Assets/Banner_Images/banner_header.jpg" class="d-block w-100" alt="Banner 1">
                <div class="carousel-caption d-none d-md-block">

                </div>
            </div>
            <!-- Slide 2 -->
            <div class="carousel-item">
                <img src="~/Content/Assets/Banner_Images/banner_header1.jpg" class="d-block w-100" alt="Banner 2">
            </div>
            <!-- Slide 3 -->
            <div class="carousel-item">
                <img src="~/Content/Assets/Banner_Images/banner_header2.jpg" class="d-block w-100" alt="Banner 3">
            </div>
        </div>

        <!-- 3. Nút qua lại (Controls) -->
        <button class="carousel-control-prev" type="button" data-bs-target="#heroCarousel" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#heroCarousel" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
        </button>
    </div>
    <nav aria-label="breadcrumb" class="mb-4">
        <ol class="breadcrumb p-3 rounded">
            <li class="breadcrumb-item">@Html.ActionLink("Trang chủ", "Index", "Home", null, new { @class = "text-decoration-none" })</li>
            <li class="breadcrumb-item active" aria-current="page">@ViewBag.Title</li>
        </ol>
    </nav>

    @using (Html.BeginForm("Index", "Promotion", FormMethod.Get))
    {
        <div class="row g-3 mb-4 p-3 rounded align-items-center shadow-sm">

            <div class="col-lg-auto fw-bold">
                <i class="fas fa-filter me-1 text-danger"></i> BỘ LỌC:
            </div>

            <div class="col-lg-3 col-md-6">
                <select class="form-select" name="priceRange">
                    <option value="">Lọc theo giá</option>
                    <option value="1">Dưới 10.000.000 đ</option>
                    <option value="2">Từ 10.000.000 đ - 20.000.000 đ</option>
                    <option value="3">Từ 20.000.000 đ - 40.000.000 đ</option>
                    <option value="4">Từ 40.000.000 đ - 100.000.000 đ</option>
                    <option value="5">Từ 100.000.000 đ - 300.000.000 đ</option>
                    <option value="6">Trên 300.000.000 đ</option>
                </select>
            </div>

            <div class="col-lg-3 col-md-6">
                <select class="form-select" name="brandId">
                    <option value="">Lọc theo thương hiệu</option>
                    @foreach (var brand in Model.Brands)
                    {
                        <option value="@brand.MATHUONGHIEU">@brand.TENTHUONGHIEU</option>
                    }
                </select>
            </div>

            <div class="col-lg-auto col-md-6">
                <button type="submit" class="btn btn-danger w-100">Lọc</button>
            </div>
        </div>
    }


    @*Ghim bộ lọc*@
    <div class="row mb-3">
        <div class="col-12 d-flex align-items-center flex-wrap">
            @{
                // Lấy lại các giá trị active từ Controller
                var activeBrandId = (int?)ViewBag.ActiveBrandId;
                var activePriceRange = (string)ViewBag.ActivePriceRange;
            }

            @*giá*@
            @if (!string.IsNullOrEmpty(activePriceRange))
            {
                // Tự định nghĩa lại tên cho đẹp (phải khớp với <option> trong form)
                string priceText = "";
                switch (activePriceRange)
                {
                    case "1": priceText = "Dưới 10.000.000 đ"; break;
                    case "2": priceText = "Từ 10.000.000 đ - 20.000.000 đ"; break;
                    case "3": priceText = "Từ 20.000.000 đ - 40.000.000 đ"; break;
                    case "4": priceText = "Từ 40.000.000 đ - 100.000.000 đ"; break;
                    case "5": priceText = "Từ 100.000.000 đ - 300.000.000 đ"; break;
                    case "6": priceText = "Trên 300.000.000 đ"; break;
                }
                <div class="badge text-dark rounded-pill p-2 px-3 me-2 mb-2">
                    Lọc giá: <strong>@priceText</strong>

                    <a href="@Url.Action("Index", "Promotion", new { brandId = activeBrandId, priceRange = (string)null })"
                       class="text-dark text-decoration-none ms-2">
                        <i class="fas fa-times"></i>
                    </a>
                </div>
            }


            @*Thương hiệu*@

            @if (activeBrandId.HasValue)
            {
                // Tìm tên thương hiệu từ Model
                var brandName = Model.Brands.FirstOrDefault(b => b.MATHUONGHIEU == activeBrandId.Value)?.TENTHUONGHIEU;

                <div class="badge text-dark rounded-pill p-2 px-3 me-2 mb-2">
                    Thương hiệu: <strong>@brandName</strong>

                    <a href="@Url.Action("Index", "Promotion", new { priceRange = activePriceRange, brandId = (int?)null })"
                       class="text-dark text-decoration-none ms-2">
                        <i class="fas fa-times"></i>
                    </a>
                </div>
            }
        </div>
    </div>


    <div class="row">

        @if (Model.Products.Any())
        {
            foreach (var product in Model.Products)
            {
                <div class="col-lg-3 col-md-4 col-sm-6 mb-4">
                    <div class="card h-100 border-0 shadow-sm product-card bg-white">

                        @if (product.GIAGOC.HasValue && product.GIABAN.HasValue && product.GIAGOC > product.GIABAN)
                        {
                            decimal discount = ((product.GIAGOC.Value - product.GIABAN.Value) / product.GIAGOC.Value) * 100;
                            <span class="badge bg-danger position-absolute top-0 end-0 m-2" style="z-index: 10;">
                                -@discount.ToString("F0")%
                            </span>
                        }
                        @{
                            // (Code C# của bạn đã ở đây - Rất tốt)
                            var hoverImage = product.SANPHAM.LIST_ANHSP.FirstOrDefault();
                            var containerClass = hoverImage != null ? "has-hover-image" : "no-hover-image";
                        }

                        <a href="@Url.Action("Details", "Store", new { id = product.MASP })" class="product-image-container @containerClass">

                            <img src="@Url.Content("~/Content/Assets/Product_Images/" + @product.SANPHAM.ANHBIA)"
                                 class="card-img-top img-main" alt="@product.SANPHAM.TENSP">

                            @if (hoverImage != null)
                            {
                                <img src="@Url.Content("~/Content/Assets/Product_Images/" + hoverImage.URL_ANH)"
                                     class="card-img-top img-hover" alt="@product.SANPHAM.TENSP hover">
                            }

                        </a>

                        <div class="card-body p-3">
                            <h6 class="card-title mb-1">
                                <a href="@Url.Action("Details", "Store", new { id = product.MASP })" class="text-dark text-decoration-none product-title-truncate">
                                    @product.SANPHAM.TENSP
                                </a>
                            </h6>
                            <p class="card-text text-danger fw-bold mb-2">
                                @string.Format("{0:N0}", product.GIABAN) đ
                                @if (product.GIAGOC.HasValue && product.GIAGOC > product.GIABAN)
                                {
                                    <span class="text-muted text-decoration-line-through small ms-2">
                                        @string.Format("{0:N0}", product.GIAGOC) đ
                                    </span>
                                }
                            </p>
                        </div>

                        <div class="card-footer bg-transparent border-0 text-center pt-0 pb-3">

                            <form action="@Url.Action("AddToCart", "Cart")" method="post">

                                <input type="hidden" name="productId" value="@product.MASP" />

                                <input type="hidden" name="variantId" value="@product.MABIENTHE" />

                                <input type="hidden" name="quantity" value="1" />

                                <input type="hidden" name="type" value="buynow" />

                                <button type="submit" class="btn btn-danger">Mua ngay</button>
                            </form>
                        </div>


                    </div>
                </div>
            }
        }
        else
        {
            <div class="col-12 text-center">
                <p>Không tìm thấy sản phẩm khuyến mãi nào phù hợp với bộ lọc.</p>
            </div>
        }
    </div>
</div>