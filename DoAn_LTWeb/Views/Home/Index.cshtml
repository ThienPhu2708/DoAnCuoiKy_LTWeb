@{
    ViewBag.Title = "Home Page";
}
@model DoAn_LTWeb.ViewModels.HomeViewModel
<main>
    @*Banner ảnh*@
    <div id="heroCarousel" class="carousel slide carousel-fade" data-bs-ride="carousel">
        <div class="carousel-indicators">
            <button type="button" data-bs-target="#heroCarousel" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
            <button type="button" data-bs-target="#heroCarousel" data-bs-slide-to="1" aria-label="Slide 2"></button>
            <button type="button" data-bs-target="#heroCarousel" data-bs-slide-to="2" aria-label="Slide 3"></button>
        </div>
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img src="~/Content/Assets/Banner_Images/banner_header.jpg" class="d-block w-100" alt="Banner 1">
                <div class="carousel-caption d-none d-md-block">
                   
                </div>
            </div>
            <!-- Slide 2 -->
            <div class="carousel-item">
                <img src="~/Content/Assets/Banner_Images/banner_header1.jpg" class="d-block w-100" alt="Banner 2">
            </div>
            <!-- Slide 3 -->
            <div class="carousel-item">
                <img src="~/Content/Assets/Banner_Images/banner_header2.jpg" class="d-block w-100" alt="Banner 3">
            </div>
        </div>

        <!-- 3. Nút qua lại (Controls) -->
        <button class="carousel-control-prev" type="button" data-bs-target="#heroCarousel" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#heroCarousel" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
        </button>
    </div>






    @*Promotion*@
    <section class="mt-4 py-4 bg-white">
        <div class="container">
            <div class="row">
                <div class="col-md-3 col-6 mb-3">
                    <div class="card h-100 border-0 shadow-sm bg-warning">
                        <div class="card-body text-center">
                            <i class="fas fa-truck fa-2x text-danger mb-2"></i>
                            <h6 class="fw-bold">
                                @Html.ActionLink("Trả góp", "", "Home", null, new { @class = "text-dark text-decoration-none" })
                            </h6>
                            <p class="text-dark opacity-75 small">Mua hàng mới lãi suất 0%</p>
                        </div>
                    </div>
                </div>

                <div class="col-md-3 col-6 mb-3">
                    <div class="card h-100 border-0 shadow-sm bg-warning">
                        <div class="card-body text-center">
                            <i class="fas fa-shield-alt fa-2x text-danger mb-2"></i>
                            <h6 class="fw-bold">
                                @Html.ActionLink("Vận chuyển", "", "Home", null, new { @class = "text-dark text-decoration-none" })
                            </h6>
                            <p class="text-dark opacity-75 small">Chuyên nghiệp - Tốc độ</p>
                        </div>
                    </div>
                </div>

                <div class="col-md-3 col-6 mb-3">
                    <div class="card h-100 border-0 shadow-sm bg-warning">
                        <div class="card-body text-center">
                            <i class="fas fa-money-bill-wave fa-2x text-danger mb-2"></i>
                            <h6 class="fw-bold">
                                @Html.ActionLink("Bảo hành", "", "Home", null, new { @class = "text-dark text-decoration-none" })
                            </h6>
                            <p class="text-dark opacity-75 small">Hiệu quả - Chất lượng</p>
                        </div>
                    </div>
                </div>

                <div class="col-md-3 col-6 mb-3">
                    <div class="card h-100 border-0 shadow-sm bg-warning">
                        <div class="card-body text-center">
                            <i class="fas fa-headset fa-2x text-danger mb-2"></i>
                            <h6 class="fw-bold">
                                @Html.ActionLink("Đại lý", "DaiLy", "Home", null, new { @class = "text-dark text-decoration-none" })
                            </h6>
                            <p class="text-dark opacity-75 small">Trải rộng khắp Việt Nam</p>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </section>

    @*Danh mục nhạc cụ*@
    <section class="py-5">
        <div class="container">
            <div class="row">
                <div class="col-12 mb-4">
                    <h2 class="fw-bold">NHẠC CỤ</h2>
                    <div class="title-divider"></div>
                </div>
            </div>
            <div class="row">
                @foreach (var category in Model.ParentCategories)
                {
                    <div class="col-lg-4 col-md-6 mb-4">

                        <div class="card text-white border-0 shadow-sm category-card">

                            <img src="@Url.Content("~/Content/Assets/Product_Images/" + @category.ANHDAIDIEN)" class="card-img" alt="@category.TENLOAI">

                            <div class="card-img-overlay d-flex flex-column justify-content-end p-4">
                                <h4 class="card-title fw-bold">
                                    <i class="fas fa-chevron-right me-2 small"></i> @category.TENLOAI
                                </h4>
                                <a href="@Url.Action("Index", "Store", new { id = category.MALOAI })" class="stretched-link text-white text-decoration-none small">
                                </a>
                            </div>
                        </div>

                    </div>
                }
            </div>

            @*Danh mục sản phẩm nổi bật*@
            <div class="row">
                <div class="col-12 mb-4">
                    <h2 class="fw-bold">SẢN PHẨM NỔI BẬT</h2>
                    <div class="title-divider"></div>
                </div>
            </div>


            <div class="row">
                @foreach (var product in Model.BestSeller)
                {
                    <div class="col-lg-3 col-md-4 col-sm-6 mb-4">
                        <div class="card h-100 border-0 shadow-sm product-card bg-white">

                            <a href="@Url.Action("Detail", "Product", new { id = product.MABIENTHE })">
                                <img src="@Url.Content("~/Content/Assets/Product_Images/" + @product.SANPHAM.ANHBIA)" class="card-img-top" alt="@product.SANPHAM.TENSP">
                            </a>
                            <div class="card-body p-3">
                                <h6 class="card-title mb-1">
                                    <a href="@Url.Action("Detail", "Product", new { id = product.MABIENTHE })" class="text-dark text-decoration-none text-truncate d-block">
                                        @product.SANPHAM.TENSP
                                    </a>
                                </h6>
                                <p class="card-text text-danger fw-bold mb-2">
                                    @string.Format("{0:N0}", product.GIABAN) đ
                                    @if (product.GIAGOC > product.GIABAN)
                                    {
                                        <span class="text-muted text-decoration-line-through small ms-2">
                                            @string.Format("{0:N0}", product.GIAGOC) đ
                                        </span>
                                    }
                                </p>
                            </div>

                            <div class="card-footer bg-transparent border-0 text-center pb-3">

                                <a href="#" class="btn btn-sm btn-outline-danger d-none d-md-inline-block me-1">Thêm vào giỏ</a>

                                <a href="@Url.Action("Detail", "Store", new { id = product.MASP })" class="btn btn-sm btn-outline-danger ms-1 mx-md-0">
                                    Xem chi tiết
                                </a>
                            </div>

                        </div>
                    </div>
                }
            </div>






        </div>
    </section>


    @* Danh mục tin tức *@
    <section class="py-5">
        <div class="container">
            <div class="row">
                <div class="col-12 text-center mb-4">
                    <h2 class="fw-bold">TIN TỨC - SỰ KIỆN</h2>
                    <div class="title-divider"></div>
                </div>
            </div>

            <div class="row">

                @foreach (var news in Model.News)
                {
                    <div class="col-lg-4 col-md-6 mb-4">

                        <div class="card h-100 w-50 border-0 shadow-sm product-card">

                            <a href="@Url.Action("", "", new { id = news.MATINTUC })">
                                <img src="@Url.Content("~/Content/Assets/News_Images/" + @news.ANHTINTUC)" class="card-img-top w-100" alt="@news.TIEUDE">
                            </a>

                            <div class="card-body">
                                <h5 class="card-title">
                                    <a href="@Url.Action("", "", new { id = news.MATINTUC })" class="text-dark text-decoration-none">
                                        @news.TIEUDE
                                    </a>
                                </h5>

                                @if (!string.IsNullOrEmpty(news.NOIDUNG))
                                {
                                    int maxLength = 100; // Giới hạn 100 ký tự
                                    string summary = (news.NOIDUNG.Length > maxLength)
                                                   ? news.NOIDUNG.Substring(0, maxLength) + "..."
                                                   : news.NOIDUNG;

                                    <p class="card-text small text-muted">
                                        @summary
                                    </p>
                                }
                            </div>

                            <div class="card-footer bg-white border-0 mb-3">
                                <a href="@Url.Action("", "", new { id = news.MATINTUC })" class="btn btn-sm btn-outline-danger">Đọc thêm</a>
                            </div>

                        </div>
                    </div>
                }
            </div>
        </div>
    </section>


    @*Gioi thieu tong quan*@


    <section class="py-5 bg-warning">
        <div class="container">
            <div class="row align-items-center">

                <div class="col-lg-6 mb-4 mb-lg-0">
                    <div class="ratio ratio-16x9 shadow-sm rounded">
                        <iframe src="https://www.youtube.com/embed/dQw4w9WgXcQ"
                                title="Video giới thiệu"
                                frameborder="0"
                                allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
                                allowfullscreen>
                        </iframe>
                    </div>
                </div>

                <div class="col-lg-6">
                    <h2 class="fw-bold text-dark">VIỆT THƯƠNG GẦN 30 NĂM PHÁT TRIỂN</h2>

                    <ul class="list-unstyled mt-4 text-dark opacity-75">
                        <li class="mb-2">
                            <i class="fas fa-check-circle text-danger me-2"></i>
                            Hơn 70 đại lý lớn nhỏ tại các tỉnh thành Việt Nam.
                        </li>
                        <li class="mb-2">
                            <i class="fas fa-check-circle text-danger me-2"></i>
                            Cam kết đem lại những lợi ích tốt nhất cho khách hàng.
                        </li>
                        <li class="mb-2">
                            <i class="fas fa-check-circle text-danger me-2"></i>
                            Việt Thương Music School với hệ thống giáo trình chuẩn Quốc tế.
                        </li>
                        <li class="mb-2">
                            <i class="fas fa-check-circle text-danger me-2"></i>
                            Dịch vụ cho thuê nhạc cụ, âm thanh ánh sáng lớn nhất.
                        </li>
                    </ul>

                    <div class="mt-4">
                        <a href="#" class="btn btn-dark me-2">Việt Thương Music</a>
                        <a href="#" class="btn btn-primary">Music School</a>
                    </div>
                </div>

            </div>
        </div>
    </section>


    <section class="py-5 bg-light">
        <div class="container">
            <div class="row align-items-center justify-content-center g-4">

  
                    @foreach (var brand in Model.Brands)
                    {
                        <div class="col-lg-2 col-md-3 col-4 text-center">
                            <a href="#">
                                <img src="@Url.Content("~/Content/Assets/Banner_Images/" + brand.LOGO)"
                                     alt="@brand.TENTHUONGHIEU"
                                     class="img-fluid"
                                     style="max-height: 40px; opacity: 0.6; transition: opacity 0.3s;"
                                     onmouseover="this.style.opacity=1"
                                     onmouseout="this.style.opacity=0.6">
                            </a>
                        </div>
                    }
                

            </div>
        </div>
    </section>








</main>