    @Html.ActionLink("Tin tức", "Index", "News", null, new { @class = "nav-link" })
</li>
<li class="nav-item fw-bold">
    @Html.ActionLink("Liên hệ", "Contact", "Home", null, new { @class = "nav-link" })
</li>