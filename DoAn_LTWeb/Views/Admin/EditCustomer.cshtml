@model DoAn_LTWeb.Models.KHACHHANG

@{
    ViewBag.Title = "Chỉnh sửa Khách hàng";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1 class="text-3xl font-bold text-gray-800 mb-6 border-b border-gray-300 pb-3">
    @ViewBag.Title: <span class="text-gray-600 font-medium">@Model.HOTEN</span>
</h1>

<section id="edit-customer-section">
    @using (Html.BeginForm("EditCustomer", "Admin", FormMethod.Post, new { @class = "space-y-6" }))
    {
        @Html.AntiForgeryToken()

        <div class="bg-white p-6 rounded-xl shadow-lg">
            @Html.ValidationSummary(true, "", new { @class = "text-red-600 bg-red-50 p-3 rounded-lg text-sm mb-4" })
            @Html.HiddenFor(model => model.MAKH)

            <!-- Hàng 1: Họ tên -->
            <div>
                @Html.LabelFor(model => model.HOTEN, "Họ tên Khách hàng", new { @class = "block text-sm font-medium text-gray-700 mb-1" })
                @Html.EditorFor(model => model.HOTEN, new { htmlAttributes = new { @class = "w-full p-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-400" } })
                @Html.ValidationMessageFor(model => model.HOTEN, "", new { @class = "text-red-600 text-xs mt-1" })
            </div>

            <!-- Hàng 2: SĐT và Email -->
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mt-6">
                <div>
                    @Html.LabelFor(model => model.SDT, "Số điện thoại", new { @class = "block text-sm font-medium text-gray-700 mb-1" })
                    @Html.EditorFor(model => model.SDT, new { htmlAttributes = new { @class = "w-full p-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-400" } })
                    @Html.ValidationMessageFor(model => model.SDT, "", new { @class = "text-red-600 text-xs mt-1" })
                </div>
                <div>
                    @Html.LabelFor(model => model.EMAIL, "Email", new { @class = "block text-sm font-medium text-gray-700 mb-1" })
                    @Html.EditorFor(model => model.EMAIL, new { htmlAttributes = new { @class = "w-full p-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-400", type = "email" } })
                    @Html.ValidationMessageFor(model => model.EMAIL, "", new { @class = "text-red-600 text-xs mt-1" })
                </div>
            </div>

            <!-- Hàng 3: Địa chỉ  -->
            <div class="mt-6">
                @Html.LabelFor(model => model.DIACHI_MACDINH, "Địa chỉ mặc định", new { @class = "block text-sm font-medium text-gray-700 mb-1" })
                @Html.TextAreaFor(model => model.DIACHI_MACDINH, new { @class = "w-full p-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-400", rows = 4 })
                @Html.ValidationMessageFor(model => model.DIACHI_MACDINH, "", new { @class = "text-red-600 text-xs mt-1" })
            </div>

            <!-- Hàng 4: Vai trò  -->
            <div class="mt-6">
                @Html.LabelFor(model => model.MAVAITRO, "Vai trò", new { @class = "block text-sm font-medium text-gray-700 mb-1" })
                @Html.DropDownListFor(model => model.MAVAITRO, (IEnumerable<SelectListItem>)ViewBag.MAVAITRO, "--- Chọn vai trò ---", new { @class = "w-full p-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-400" })
                @Html.ValidationMessageFor(model => model.MAVAITRO, "", new { @class = "text-red-600 text-xs mt-1" })
            </div>

            <div class="flex items-center justify-end space-x-4 pt-5 border-t border-gray-200 mt-6">
                @Html.ActionLink("Quay lại", "Customers", "Admin", null, new { @class = "px-4 py-2 bg-gray-200 text-gray-700 font-semibold rounded-lg hover:bg-gray-300 transition" })

                <button type="submit" class="px-4 py-2 bg-blue-600 text-white font-semibold rounded-lg hover:bg-blue-700 transition flex items-center">
                    <i class="fas fa-save mr-2"></i>
                    Lưu thay đổi
                </button>
            </div>
        </div>
    }
</section>