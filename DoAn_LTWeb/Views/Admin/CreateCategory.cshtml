@model DoAn_LTWeb.ViewModels.CategoryCreateViewModel

@{
    ViewBag.Title = "Tạo Loại sản phẩm mới";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1 class="text-3xl font-bold text-gray-800 mb-6 border-b border-gray-300 pb-3">
    @ViewBag.Title
</h1>

<section id="create-category-section">
    @using (Html.BeginForm("CreateCategory", "Admin", FormMethod.Post, new { @class = "space-y-6", enctype = "multipart/form-data" }))
    {
        @Html.AntiForgeryToken()

        <div class="bg-white p-6 rounded-xl shadow-lg">

            @Html.ValidationSummary(true, "", new { @class = "text-red-600 bg-red-50 p-3 rounded-lg text-sm mb-4" })

            <!-- Hàng 1: Tên Loại sản phẩm -->
            <div>
                @Html.LabelFor(model => model.LoaiSanPham.TENLOAI, "Tên Loại sản phẩm", new { @class = "block text-sm font-medium text-gray-700 mb-1" })
                @Html.EditorFor(model => model.LoaiSanPham.TENLOAI, new { htmlAttributes = new { @class = "w-full p-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-400" } })
                @Html.ValidationMessageFor(model => model.LoaiSanPham.TENLOAI, "", new { @class = "text-red-600 text-xs mt-1" })
            </div>

            <!-- Hàng 2: Loại sản phẩm cha -->
            <div class="mt-6">
                @Html.LabelFor(model => model.LoaiSanPham.MALOAICHA, "Loại sản phẩm cha (Tùy chọn)", new { @class = "block text-sm font-medium text-gray-700 mb-1" })
                @Html.DropDownListFor(model => model.LoaiSanPham.MALOAICHA, (IEnumerable<SelectListItem>)ViewBag.MALOAICHA, "--- (Không có loại cha) ---", new { @class = "w-full p-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-400" })
                @Html.ValidationMessageFor(model => model.LoaiSanPham.MALOAICHA, "", new { @class = "text-red-600 text-xs mt-1" })
            </div>

            <!-- Hàng 3: Ảnh đại diện  -->
            <div class="mt-6">
                @Html.Label("fileUpload", "Tải lên ảnh đại diện", new { @class = "block text-sm font-medium text-gray-700 mb-1" })
                <input type="file" name="AnhDaiDienFile" id="AnhDaiDienFile" class="block w-full text-sm text-gray-500
                    file:mr-4 file:py-2 file:px-4
                    file:rounded-lg file:border-0
                    file:text-sm file:font-semibold
                    file:bg-blue-50 file:text-blue-700
                    hover:file:bg-blue-100" />
                
                @Html.ValidationMessageFor(model => model.LoaiSanPham.ANHDAIDIEN, "", new { @class = "text-red-600 text-xs mt-1" })
            </div>

            <!-- Nút bấm -->
            <div class="flex items-center justify-end space-x-4 pt-5 border-t border-gray-200 mt-6">
                @Html.ActionLink("Quay lại", "Categories", "Admin", null, new { @class = "px-4 py-2 bg-gray-200 text-gray-700 font-semibold rounded-lg hover:bg-gray-300 transition" })

                <button type="submit" class="px-4 py-2 bg-blue-600 text-white font-semibold rounded-lg hover:bg-blue-700 transition flex items-center">
                    <i class="fas fa-save mr-2"></i>
                    Tạo mới Loại sản phẩm
                </button>
            </div>
        </div>
    }
</section>


