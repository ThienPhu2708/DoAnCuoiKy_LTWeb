@model DoAn_LTWeb.Models.LOAISANPHAM

@{
    ViewBag.Title = "Xác nhận Xóa Loại sản phẩm";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1 class="text-3xl font-bold text-gray-800 mb-6 border-b border-gray-300 pb-3">
    @ViewBag.Title
</h1>

<section id="delete-category-section">
    <div class="bg-white p-6 rounded-xl shadow-lg">

        <!-- Hộp thoại cảnh báo -->
        <div class="border-l-4 border-red-500 bg-red-50 p-4 rounded-md mb-6">
            <div class="flex items-center">
                <div class="text-red-500 text-3xl mr-4">
                    <i class="fas fa-exclamation-triangle fa-fw"></i>
                </div>
                <div>
                    <h3 class="text-xl font-bold text-red-700">Bạn có chắc chắn muốn xóa loại sản phẩm này không?</h3>
                    <p class="text-red-600 mt-1">Hành động này không thể hoàn tác. Các sản phẩm thuộc loại này có thể sẽ bị ảnh hưởng.</p>
                </div>
            </div>
        </div>

        <h4 class="text-lg font-semibold text-gray-800 mb-4">Thông tin loại sản phẩm sắp bị xóa:</h4>

        <!-- Hiển thị thông tin chi tiết -->
        <div class="grid grid-cols-1 md:grid-cols-3 gap-6">

            <!-- Cột 1: Ảnh đại diện -->
            <div class="md:col-span-1">
                @Html.Label("currentImage", "Ảnh đại diện", new { @class = "block text-sm font-medium text-gray-700 mb-1" })
                @if (!string.IsNullOrEmpty(Model.ANHDAIDIEN))
                {
                    <img src="@Url.Content("~/Content/Assets/Images/" + Model.ANHDAIDIEN)" alt="@Model.TENLOAI" class="h-40 w-40 object-cover rounded-lg shadow" onerror="this.src='https://placehold.co/160x160/E2E8F0/A0AEC0?text=Error'; this.onerror=null;" />
                }
                else
                {
                    <div class="h-40 w-40 rounded-lg shadow bg-gray-100 flex items-center justify-center">
                        <span class="text-gray-500 text-sm italic">Không có ảnh</span>
                    </div>
                }
            </div>

            <!-- Cột 2: Thông tin chi tiết -->
            <div class="md:col-span-2 space-y-4">
                <div>
                    <span class="block text-sm font-medium text-gray-500">@Html.DisplayNameFor(model => model.TENLOAI)</span>
                    <span class="block text-lg font-semibold text-gray-900">@Html.DisplayFor(model => model.TENLOAI)</span>
                </div>

                <div>
                    <span class="block text-sm font-medium text-gray-500">@Html.DisplayNameFor(model => model.MALOAICHA)</span>
                    <span class="block text-lg text-gray-900">
                        @if (Model.MALOAICHA.HasValue)
                        {
                            @(Model.LOAISANPHAM2?.TENLOAI ?? Model.MALOAICHA.ToString())
                        }
                        else
                        {
                            <span class="italic text-gray-500">(Không có)</span>
                        }
                    </span>
                </div>
            </div>
        </div>

        <!-- Form xác nhận xóa -->
        @using (Html.BeginForm("DeleteCategory", "Admin", new { id = Model.MALOAI }, FormMethod.Post))
        {
            @Html.AntiForgeryToken()

            <div class="flex items-center justify-end space-x-4 pt-5 border-t border-gray-200 mt-6">

                @Html.ActionLink("Quay lại", "Categories", "Admin", null, new { @class = "px-4 py-2 bg-gray-200 text-gray-700 font-semibold rounded-lg hover:bg-gray-300 transition" })

                <button type="submit" class="px-4 py-2 bg-red-600 text-white font-semibold rounded-lg hover:bg-red-700 transition flex items-center">
                    <i class="fas fa-trash-alt mr-2"></i>
                    Xác nhận Xóa
                </button>
            </div>
        }
    </div>
</section>